{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/public",
        "buildCommand": "npm run build --prefix frontend"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ]
}
